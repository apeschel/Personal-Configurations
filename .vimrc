set nocompatible
filetype plugin indent on
syntax on
set hlsearch

set shiftwidth=4
set softtabstop=4
set expandtab
set tabstop=8

set backspace=indent,eol,start
set listchars=tab:»·,trail:·
set list
set ruler

set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp/

colorscheme vividchalk
